<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/basic_details_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/details_item_margin_top"
                android:gravity="center_horizontal"
                android:text="Family Details"
                android:textSize="@dimen/heading_text_size" />


            <EditText
                android:id="@+id/mothername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_item_margin_top"
                android:hint="Mother's name"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="false" />

            <EditText
                android:id="@+id/motheroccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_item_margin_top"
                android:hint="Mother's occupation"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="false" />


            <EditText
                android:id="@+id/fathername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_item_margin_top"
                android:hint="Father's name"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="false" />

            <EditText
                android:id="@+id/fatheroccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_item_margin_top"
                android:hint="Fathers's occupation"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="false" />

            <EditText
                android:id="@+id/sisters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_item_margin_top"
                android:hint="No. of sisters"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="false" />


            <EditText
                android:id="@+id/brothers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_item_margin_top"
                android:hint="No. of brothers"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="false" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>
